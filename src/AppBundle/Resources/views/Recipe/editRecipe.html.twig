{% extends "::base.html.twig" %}

{% block title %}{{ 'automiam.recipe.edit.page_title'|trans({'%recipe%': recipe.name}) }}{{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>{{ 'automiam.recipe.edit.title'|trans({'%recipe%': recipe.name}) }}</h1>
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg pull-right">{{ 'automiam.recipe.edit.submit'|trans }}</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
