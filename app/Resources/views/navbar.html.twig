{% set route = app.request.attributes.get('_route') %}
{% set route_params = app.request.attributes.get('_route_params') %}
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">{{ 'automiam.navbar.toggle_navigation'|trans }}</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('home_route') }}">{{ 'automiam.site_title'|trans }}</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="{{ route matches '/home_*/' ? 'active' : '' }}"><a href="{{ path('home_route') }}">{{ 'automiam.navbar.home'|trans }}</a></li>
                <li class="{{ route matches '/recipe_*/' ? 'active' : '' }}"><a href="{{ path('recipe_view_recipes_route') }}">{{ 'automiam.navbar.recipes'|trans }}</a></li>
                <li class="{{ route matches '/menu_*/' ? 'active' : '' }}"><a href="{{ path('menu_new_route') }}">{{ 'automiam.navbar.menus'|trans }}</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if app.user %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-user"></i> {{ app.user.username }} <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('fos_user_security_logout') }}">{{ 'automiam.navbar.logout'|trans }}</a></li>
                    </ul>
                </li>
                {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}"><i class="glyphicon glyphicon-off"></i> {{ 'automiam.navbar.login'|trans }}</a></li>
                {% endif %}
            </ul>
        </div><!--/.nav-collapse -->
    </div><!--/.container-fluid -->
</nav>