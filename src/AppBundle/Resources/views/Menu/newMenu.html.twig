{% extends "::base.html.twig" %}

{% block title %}AppBundle:Recipe:newRecipe{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>{{ 'automiam.menu.new.title'|trans }}</h1>
            {{ form_start(form) }}
                <div class="row form-group">
                    <div class="col-xs-6">{{ form_label(form.beginDate) }} {{ form_widget(form.beginDate) }}</div>
                    <div class="col-xs-6">{{ form_label(form.endDate) }} {{ form_widget(form.endDate) }}</div>
                </div>
                {{ form_rest(form) }}
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">{{ 'automiam.menu.new.submit'|trans }}</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
