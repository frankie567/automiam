{% extends "::base.html.twig" %}

{% block title %}AppBundle:Recipe:newRecipe{% endblock %}

{% block body %}
<div class="row">
        <div class="col-md-12">
            <h1>
                {{ 'automiam.recipe.view_recipes.title'|trans }}
                <span class="pull-right">
                    <a href="{{ path('recipe_new_route') }}" class="btn btn-primary"><i class="glyphicon glyphicon-plus-sign"></i> {{ 'automiam.recipe.view_recipes.new'|trans }}</a>
                </span>
            </h1>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>{{ 'automiam.recipe.view_recipes.name'|trans }}</th>
                        <th>{{ 'automiam.recipe.view_recipes.category'|trans }}</th>
                        <th>{{ 'automiam.recipe.view_recipes.tags'|trans }}</th>
                        <th>{{ 'automiam.recipe.view_recipes.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for recipe in recipes %}
                        <tr>
                            <td>{{ recipe.name }}</td>
                            <td>{{ recipe.category }}</td>
                            <td>
                                {% for tag in recipe.tags %}
                                    <span class="label label-primary">{{ tag }}</span> 
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('recipe_edit_route', {'slug': recipe.slug}) }}" class="btn btn-xs btn-primary"><i class="glyphicon glyphicon-edit"></i> {{ 'automiam.recipe.view_recipes.edit'|trans }}</a>
                                <button type="button" class="btn btn-xs btn-danger" data-toggle="popover" title="{{ 'automiam.recipe.view_recipes.delete_confirm'|trans }}" data-content="<button type='button' class='btn btn-block btn-default'>{{ 'automiam.recipe.view_recipes.delete_cancel_button'|trans }}</button><a href='{{ path('recipe_delete_route', {'slug': recipe.slug}) }}' class='btn btn-block btn-danger'>{{ 'automiam.recipe.view_recipes.delete_confirm_button'|trans }}</a>" data-html="true" data-trigger="focus" data-placement="top"><i class="glyphicon glyphicon-remove"></i> {{ 'automiam.recipe.view_recipes.delete'|trans }}</button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
