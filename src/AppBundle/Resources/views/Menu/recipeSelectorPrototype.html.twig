{% block appbundle_recipe_selector_row %}
    <div class="panel panel-{{ form.vars.valid ? 'default': 'danger' }}">
        {% if not form.vars.valid %}
            <div class="panel-heading">
                {% for error in form.vars.errors %}
                    <h3 class="panel-title">{{ error.message }}</h3>
                {% endfor %}
            </div>  
        {% endif %}
        <div class="panel-body">
            {{ form_row(form.dayMenu) }}
            {{ form_row(form.category) }}
            {{ form_row(form.tags) }}
        </div>
    </div>
{% endblock %}